<div class="row">
  <%# @posts comes from the posts_controller.rb where
  it gets the current author's posts %>
  <% @posts.each do |post| %>
    <div class="col-md-6 col-lg-4">
      <div class="card" style="width: 18rem;">
        <img src="<%= url_for(post.header_image) %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.description %></p>
          <a href="#" class="btn btn-dark">Read Post</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

